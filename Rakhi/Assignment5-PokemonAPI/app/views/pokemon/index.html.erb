
<h1><center>Pokemon</center></h1>
  <div class="pokedex-screen list-group">
    <% @poke_list[:list].each do |pokemon| %>
      <%= link_to (pokemon[:id] + ": " + pokemon[:name]), pokemon_path(:id => pokemon[:id]) %>
    <% end %>
  </div>

<%# this is code previous button %>
  <div class="pokedex-list-buttons btn-group">
    <%= link_to pokemon_index_path(:offset => @poke_list[:prev][:offset], :limit => @poke_list[:prev][:limit]), class: "btn btn-secondary border-dark" do %>
    <% end %>
<%# this is code for next button %>
    <%= link_to pokemon_index_path(:offset => @poke_list[:next][:offset], :limit => @poke_list[:next][:limit]), class: "btn btn-secondary border-dark" do %>
    <% end %>
  </div>
