<p id="notice"><%= notice %></p>
<div align="center">
<%= link_to "Export CSV", revenues_path(format: :csv),class: 'btn btn-info' %>
</div>
<div style="text-align: center;">
  <br>
<h1>Assignment No-15 Revenues</h1>
</div>
<br>
<table class="table">

  <thead>
    <style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>

    <tr>
      <th scope="col">Item</th>
      <th scope="col">Total sales</th>
      <th scope="col">Quantity</th>
       <th scope="col">percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% running_total = 0 %>
    <% @revenues.each do |revenue| %>
      <tr>
        <td><%= revenue.item %></td>
        <td><%= number_to_currency (revenue.total_sales) %></td>
        <td><%= revenue.quantity %></td>


        <td><%= number_to_currency(revenue.quantity * revenue.total_sales / 100) %></td>

        <td class="btn btn-primary"><%= link_to 'Show', revenue %></td>
        <td class="btn btn-info"><%= link_to 'Edit', edit_revenue_path(revenue) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', revenue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
<%= link_to 'New Revenue', new_revenue_path ,class:"btn btn-success"%>
</div>
