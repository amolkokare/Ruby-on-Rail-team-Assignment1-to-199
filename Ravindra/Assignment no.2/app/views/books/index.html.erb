<p id="notice"><%= notice %></p>
<div align="center">

<h1 style="color:#7D3C98 ;">Books</h1>


<table class="table table-bordered border-dark>
  <thead>

    <tr>
      <th>Title</th>
      <th>Published year</th>
       <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.Title %></td>
        <td><%= book.Published_year %></td>
        <td><%= book.author.name %></td>
        <td><%= link_to 'Show', book, :class=>"btn btn-info text-white" %></td>

        <td><%= link_to 'Edit', edit_book_path(book), :class=>"btn btn-success text-white" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger text-white"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Book', new_book_path, :class => "btn btn-primary btn-sm bg-primary text-wrap text-white"%>







