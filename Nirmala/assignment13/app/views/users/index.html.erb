<p id="notice"><%= notice %></p>
<div style="text-align: center;color: blue; font-size: 25px; border-style: double
">Users</div><br><br>
<%= link_to "Export CSV", users_path(format: :csv),class: 'btn btn-info' %> 
<br><br><br>
<table  class="table table-bordered border-primary">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= link_to '👁️', user %></td>
        <td><%= link_to '✏️', edit_user_path(user) %></td>
        <td><%= link_to '🗑️', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>







<%= paginate @users %>

<%= link_to 'New User', new_user_path %>
