

<%= render 'partial/nav' %>
<h2 style="text-align: center;color: green">Food Calories</h2>
<div style="text-align: right;font-size: 20px">
 
<hr>
<table class="table table-striped">
	<thead>
		<tr> 
			<th>Item Name </th>
		    <th>Quantity </th>
			<th>Calories</th>
		</tr>

	</thead>
<tbody>
<% @meals.each do |meal| %>
  <td><%= meal.name %></td>
  <td><img class="col s3" src="<%= meal.thumbnail %>"> </td>




