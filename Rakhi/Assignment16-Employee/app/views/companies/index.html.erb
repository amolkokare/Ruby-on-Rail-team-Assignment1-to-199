<p id="notice"><%= notice %></p>

<h1><center>Companies Information</center></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Company_name</th>
      <th scope="col">Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.cname %></td>
        <td><%= company.address %></td>
        <td><%= link_to 'Show', company, :class=>"btn btn-success"  %></td>
        <td><%= link_to 'Edit', edit_company_path(company), :class=>"btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, :class=>"btn btn-link" %>
