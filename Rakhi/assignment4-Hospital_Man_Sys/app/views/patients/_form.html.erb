<%# Create a form for doctor that has placeholders %>
<%= form_with model: patient do |form| %>
  <div>
    <%= form.text_field :name, placeholder: "Name" %>
    <div class="input-group">
      <span class="input-group-text">Date of Birth</span>
	  <%= form.date_field :dob %>
	</div>
  <div>
    <%= form.text_field:phn, placeholder: "phone_number" %>
  </div>
    <div class="form-check pt-1">
      <%= form.check_box :is_insured %>
      <%= form.label :is_insured, "Patient Insured?" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-success mb-3" %>
  </div>
<% end %>
