<p id="notice"><%= notice %></p>
<div style="text-align: center">
<h1>Assignment no-14 Products</h1>
</div>
<table class="table table-striped">
  <thead>
    <style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>

    <tr>
      <th>Order</th>
      <th>Quantity</th>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.order %></td>
        <td><%= product.quantity %></td>
        <td><%= product.item %></td>
        <td><%= product.description %></td>
        <td><%=  product.price%></td>
        <td><%= link_to 'Show', product, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-secondary"  %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure ?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Import</h3>
<%= form_tag import_products_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<div align="center">
<%= link_to 'New Product', new_product_path, class:"btn btn-success"%>
</div>
