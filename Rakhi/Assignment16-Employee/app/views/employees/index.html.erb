<p id="notice"><%= notice %></p>

<h1><center>Employees Information</center></h1>
<div align="center">
  <br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Employee_name</th>
      <th scope="col">Designation</th>
      <th scope="col">Company_name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.ename %></td>
        <td><%= employee.designation %></td>
       <td><%= employee.company.cname %></td>
        <td><%= link_to 'Show', employee,  :class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path, :class=>"btn btn-link" %>
