<%# Create a form for appointment that has placeholders %>
<div style="border-style: solid;
  border-width: 1px;">
</br>

<%= form_with model: appointment do |form| %>
  
    <div style="text-align: center;" >
        <%= form.collection_select :patient_id, Patient.all, :id, :name, {prompt: "Select Patient"} , :class=>"mb-3"%>

        <%= form.collection_select :doctor_id, Doctor.all, :id, :name, {prompt: "Select Doctor"} %>
        </div>
<br>

<div style="text-align: center;">

<span>Date</span>
        <%= form.date_field :date%>

</div>
</br>

<div style="text-align: center;">
<span>Start Time</span>
        <%= form.time_field :start_time%>
</div>
</br>
<div style="text-align: center;">
      
     
        <span>End Time</span>
        <%= form.time_field :end_time %>
      </div>
    </br>
    
    <div style="text-align: center;">
    <%= form.text_area :issue, placeholder: "Describe issue", rows: "5" %>
  </div>
</br>
<div style="text-align: center;">

    <%= form.submit "Submit", :class => "btn btn-info btn-sm bg-primary text-wrap text-white"%>
  </div>
</div>
<% end %>












