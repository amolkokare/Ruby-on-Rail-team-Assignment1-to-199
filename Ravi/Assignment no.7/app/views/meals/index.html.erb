  <td><%= meal.calories %></span> Calories</td>
   <td>   <%= link_to meal, method: :delete, data: { confirm: 'Are you sure?'} do %>
      <i class="material-icons">Remove</i><td>
      </tr>

       
      <% end %>
    
 
<% end %>

<br>

    <%= render 'form', meal: Meal.new %>
  </tbody>
</table>