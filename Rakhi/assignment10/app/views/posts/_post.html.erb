<div class="post">

<% if post.image_processed? %>
  <%= link_to image_tag(post.image_url(:thumb)), post %>
  <div class="name"><%= post.name %></div>
  <div class="actions">
    <%= link_to "edit", edit_post_path(post) %>
    <%= link_to "remove", post, :confirm => 'are you sure?', :method => :delete %>
  </div>
</div>
