<p id="notice"><%= notice %></p>

<h1><center>Companies Information</center></h1>
<br>

<br>
<div class="container">
<div align="center">
<table class="table table-hover">

<table>
  <thead>
    <style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>
    <tr>
      <th scope="col">Company_id</th>
      <th scope="col">Company name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_id %></td>
        <td><%= company.company_name %></td>
        <td><%= link_to 'Show', company, :class=>"btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_company_path(company), :class=>"btn btn-secondary"  %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, :class=>"btn btn-link" %>
